{
    "name": "default-components",
    "description": "Content Station Digital Editor components",
    "version": "1.0.0",
    "defaultComponentOnEnter": "body",

    "components":[
        {
            "name": "body",
            "label": "{{ 'BODY_EDITOR_LABEL' | translate }}",
            "icon": "icons/components/body.svg",
            "properties":[
                "drop-capital",
                "style",
                "text-align",
                "letter-spacing",
                "line-height"
            ],
            "countStatistics": true
        },
        {
            "name": "container",
            "icon": "icons/components/container.svg",
            "selectionMethod": "handle",
            "allowNesting": "one-level",
            "label": "{{ 'DESIGN_COMPONENT_CONTAINER_LABEL' | translate }}",
            "properties": [
                "style",
                "position",
                "background-color"
            ]
        },
        {
            "name": "product",
            "icon": "icons/components/product.svg",
            "label": "{{ 'DESIGN_COMPONENT_PRODUCT_LABEL' | translate }}",
            "properties": [
                "position",
                "style",
                "text-align",
                "letter-spacing",
                "line-height"
            ]
        },
        {
            "name": "image",
            "icon": "icons/components/image.svg",
            "label": "{{ 'IMAGE_EDITOR_LABEL' | translate }}",
            "properties": [
                "fitting",
                "position",
                "style",
                "inside-caption",
                "disable-fullscreen",
                "text-align",
                "letter-spacing",
                "line-height",
                "edit-image:image"
            ]
        },
        {
            "name": "embed",
            "icon": "icons/components/embed.svg",
            "selectionMethod": "handle",
            "label": "{{ 'DESIGN_COMPONENT_EMBED_LABEL' | translate }}",
            "properties": [
