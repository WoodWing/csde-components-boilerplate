                    },
                    {
                        "caption": { "key": "PROPERTY_VARIANT_STYLE_OPTION", "values": { "0": "5" } },
                        "value": "_option5"
                    },
                    {
                        "caption": { "key": "PROPERTY_VARIANT_STYLE_OPTION", "values": { "0": "6" } },
                        "value": "_option6"
                    },
