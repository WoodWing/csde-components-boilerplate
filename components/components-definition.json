        {
            "name": "slideshow",
            "icon": "icons/components/slideshow.svg",
            "label": "{{ 'DESIGN_COMPONENT_SLIDESHOW_LABEL' | translate }}",
            "properties": [
                "fitting",
                "slideshow-inside-caption",
                "slideshow-play-orientation",
                "slideshow-autoplay",
                "slideshow-filmstrip",
                "disable-fullscreen",
                "style",
                "text-align",
                "letter-spacing",
                "line-height"
            ],
            "restrictChildren": {
