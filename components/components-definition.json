    "componentProperties": [
        {
            "name": "position",
            "label": "{{ 'DESIGN_PROPERTY_POSITION_LABEL' | translate }}",
            "control": {
                "type": "select",
                "options": [
                    {
                        "caption": "{{ 'DESIGN_PROPERTY_POSITION_MIDDLE_LABEL' | translate }}"
                    },
                    {
                        "caption": "{{ 'DESIGN_PROPERTY_POSITION_LEFT_LABEL' | translate }}",
                        "value": "_left"
                    },
                    {
                        "caption": "{{ 'DESIGN_PROPERTY_POSITION_RIGHT_LABEL' | translate }}",
                        "value": "_right"
                    }
                ]
            },
            "dataType": "styles"
        },
        {
            "name": "letter-spacing",
            "label": "{{ 'DESIGN_PROPERTY_LETTER_SPACING' | translate }}",
            "control": {
                "type": "text",
                "pattern": "^(([+-]{0,1})([0-9]|[0-9][.][0-9]{1,}|[0-9]{2}|[0-9]{2}[.][0-9]{1,}|[1-4][0-9]{0,2}|[1-4][0-9]{0,2}[.][0-9]{1,}|(500))|auto)$",
                "defaultValue": "",
                "unit": "em",
                "inputPlaceholder": "DESIGN_PROPERTY_LETTER_SPACING_PLACEHOLDER"
            },
            "selector": "[doc-editable]",
            "dataType": "inlineStyles",
            "featureFlag": "ContentStation-LocalStyleOverrides"
        },
        {
            "name": "line-height",
            "label": "{{ 'DESIGN_PROPERTY_LINE_HEIGHT' | translate }}",
            "control": {
                "type": "text",
                "pattern": "^(([+]{0,1})([0-9]|[0-9][.][0-9]{1,}|[1-9]{2}|[1-9]{2}[.][0-9]{1,}|[1-4][0-9]{0,2}|[1-4][0-9]{0,2}[.][0-9]{1,}|(500))|auto)$",
                "defaultValue": "",
                "unit": "em",
                "inputPlaceholder": "DESIGN_PROPERTY_LETTER_SPACING_PLACEHOLDER"
            },
            "selector": "[doc-editable]",
            "dataType": "inlineStyles",
            "featureFlag": "ContentStation-LocalStyleOverrides"
        },
