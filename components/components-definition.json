                        "caption": { "key": "PROPERTY_VARIANT_STYLE_OPTION", "values": { "0": "7" } },
                        "value": "_option7"
                    },
                    {
                        "caption": { "key": "PROPERTY_VARIANT_STYLE_OPTION", "values": { "0": "8" } },
